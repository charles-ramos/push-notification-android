<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.back4app.basicuserregistration.MainActivity">

    <!-- YOUR COMPONENTS GOES HERE -->

    <TextView
        android:id="@+id/tv_username"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:text="Username"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/tv_password"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/et_username" />

    <EditText
        android:id="@+id/et_username"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toRightOf="@+id/tv_username"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.394" />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="82dp"
        android:layout_height="20dp"
        android:text="Password"
        android:textAlignment="viewStart"
        app:layout_constraintBottom_toTopOf="@+id/bt_login"
        app:layout_constraintTop_toBottomOf="@+id/tv_username"
        app:layout_constraintLeft_toLeftOf="@+id/tv_username" />

    <EditText
        android:id="@+id/et_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPassword"
        app:layout_constraintTop_toBottomOf="@+id/et_username"
        app:layout_constraintRight_toRightOf="@+id/et_username"
        app:layout_constraintBottom_toTopOf="@+id/bt_login"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintVertical_bias="0.304"
        app:layout_constraintLeft_toLeftOf="@+id/et_username" />

    <Button
        android:id="@+id/bt_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textAlignment="center"
        app:layout_constraintBaseline_toBaselineOf="@+id/bt_register"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/bt_register" />

    <Button
        android:id="@+id/bt_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Register"
        android:textAlignment="center"
        app:layout_constraintLeft_toRightOf="@+id/bt_login"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/et_password" />

</android.support.constraint.ConstraintLayout>
